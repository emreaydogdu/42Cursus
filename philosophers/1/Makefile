NAME = philo
CC = cc
CFLAGS = -Wall -Wextra -Werror
RM = rm
RMFLAGS = -f
SRC = src/main.c \
		src/error.c \
		src/ft_atoi.c \
		src/set.c \
		src/philosophers.c \
		src/util.c \
		src/action.c

OBJ_DIR = obj
OBJ = $(addprefix $(OBJ_DIR)/, $(notdir $(SRC:.c=.o)))
# notdir é–¢æ•°ã¯ã€ãƒ‘ã‚¹ã‹ã‚‰ãƒ‡ã‚£ãƒ¬ã‚¯ãƒˆãƒªéƒ¨åˆ†ã‚’å‰Šé™¤ã—ã¦ãƒ•ã‚¡ã‚¤ãƒ«åã ã‘ã‚’å–å¾—ã™ã‚‹é–¢æ•°
# addprefix é–¢æ•°ã¯ã€ç¬¬ä¸€å¼•æ•°ã«æŒ‡å®šã—ãŸæ–‡å­—åˆ—ã‚’ã€ç¬¬äºŒå¼•æ•°ã«æŒ‡å®šã—ãŸæ–‡å­—åˆ—ã®å‰ã«ä»˜ã‘ã‚‹é–¢æ•°

all: $(NAME)

$(OBJ_DIR)/%.o: src/%.c
	$(CC) -c $< -o $@

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
	@printf "\e[38;5;82msuccessfully builtğŸš€\e[0m\n"

# -fsanitize=thread
# $(CC) $(PRINT) $(GNL) $(OBJ) -o $(NAME)
clean: 
	$(RM) $(RMFLAGS) $(OBJ_DIR)/*.o
    
fclean: clean 
	$(RM) $(RMFLAGS) $(NAME)
	@printf "\e[38;5;208msuccessfully deletedğŸ—‘\e[0m\n"

push: 
	git add .
	git commit -m "auto commit"
	git push

re: fclean all 

.PHONY: all clean fclean re help

